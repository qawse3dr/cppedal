{
  // INPUT
  "ingestor": {
    "name": "mcp3002",
    "path": "lib/ingestors/libcppedal-ingestor-mcp3002.so"
  },
  // OUTPUT
  "pwm_output": {
    "name": "rpi",
    "path": "lib/pwm-output/libcppedal-pwm-output-rpi-single.so"
  },

  // LCD
  "lcd": {
    "name": "1602_LCD",
    "path": "lib/lcd/libcppedal-lcd-1602.so"
  },

  // INPUT LIB
  "input_library": {
    "name": "rpi",
    "path": "lib/input/libcppedal-input-rpi.so"
  },

  // EFFECTS
  "effect_libraries": [
    {
      "name": "clean",
      "path": "lib/effects/libcppedal-effect-clean.so"
    },
    {
      "name": "dist",
      "path": "lib/effects/libcppedal-effect-dist.so"
    }
  ],
  "inputs" : [
    // PUSH BUTTONS
    {
      "name": "push_left",
      "type": "push_button",
      "type_data": {
        "input_gpio": 23,
        "pull_up": true
      }
    },
    {
      "name": "push_middle",
      "type": "push_button",
      "type_data": {
        "input_gpio": 29,
        "pull_up": true
      }
    },
    {
      "name": "push_right",
      "type": "push_button",
      "type_data": {
        "input_gpio": 6,
        "pull_up": true
      }
    },

    // ROTARY ENCODERS
    {
      "name": "rotary_left",
      "type": "rotary_encoder",
      "type_data": {
        "data_gpio": 24,
        "clk_gpio": 25,
        "pull_up": true
      }
    },
    {
      "name": "rotary_middle",
      "type": "rotary_encoder",
      "type_data": {
        "data_gpio": 28,
        "clk_gpio": 27,
        "pull_up": true
      }
    },
    {
      "name": "rotary_right",
      "type": "rotary_encoder",
      "type_data": {
        "data_gpio": 5,
        "clk_gpio": 4,
        "pull_up": true
      }
    }
  ],

  "effects": [
    {
      "name": "clean",
      "effects": ["clean"],
      "inputs": [] // No inputs for clean
    },
    {
      "name": "dist",
      "effects": ["dist"],
      "inputs": [
        {
          "name": "dist_level",
          "input": "rotary_right"
        }
      ]
    }

  ],

  // SUSSY BUTTONS
  "prev-effect-button": "push_left",
  "next-effect-button": "push_right"
}